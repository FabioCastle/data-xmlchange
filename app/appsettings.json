{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.Hosting.Lifetime": "Information"
    }
  },
  "Service": {
    "PollingPeriodInMilliseconds": 5000,
    "LogFile": "Logs/data-xmlchange-{Date}.log"
  },
  "DataXmlChange": {
    "DataRetrieval": {
      "Url": "http://localhost:5500/xml.xml"
    },
    "DataExtraction": {
      "Queries": [
        {
          "Id": "Timestamp",
          "ElementType": 0,
          "FilterByName": "Header",
          "FilterByValue": null,
          "ValueLocation": 1,
          "ValueLocationName": "creationTime"
        },
        {
          "Id": "MainProgram",
          "ElementType": 1,
          "FilterByName": "name",
          "FilterByValue": "program",
          "ValueLocation": 0,
          "ValueLocationName": null
        },
        {
          "Id": "PartCount",
          "ElementType": 1,
          "FilterByName": "name",
          "FilterByValue": "PartCountAct",
          "ValueLocation": 0,
          "ValueLocationName": null
        }
      ]
    },
    "DataStorage": {
      "OutputFile": "Output\\data.txt",
      "Lines": [
        {
          "FormatString": "Line_1|{0}|{1}|{2}",
          "ResultIds": [
            "Timestamp",
            "MainProgram",
            "PartCount"
          ]
        },
        {
          "FormatString": "Line_2|{0}|{1}|{2}",
          "ResultIds": [
            "Timestamp",
            "MainProgram",
            "PartCount"
          ]
        }
      ]
    }
  }
}
